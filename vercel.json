{
    "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server.js" },
      { "source": "/(.*)", "destination": "/index.html" }
    ]
  }
  